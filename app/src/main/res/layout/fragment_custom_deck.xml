<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/ListView"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_deck"
        android:id="@+id/addDeckBtn"
        android:background="#ff00a0ff"
        android:textColor="#ffffffff"
        android:layout_margin="5dp" />
    <LinearLayout android:layout_width="match_parent"
        android:id="@+id/editDeckSet"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save_deck"
            android:id="@+id/saveDeckBtn"
            android:background="#ff009502"
            android:textColor="#ffffffff"
            android:layout_margin="5dp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/cancel_deck"
            android:id="@+id/cancelDeckBtn"
            android:background="#ffff0000"
            android:textColor="#ffffffff"
            android:layout_margin="5dp" />
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageClass"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>